{
  "name": "quicksnipe",
  "productName": "Quicksnipe",
  "description": "A Snipe-IT QR Scanner",
  "private": true,
  "version": "1.0.8",
  "author": "Mike Sylvester",
  "main": "main.cjs",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "electron": "electron .",
    "dist": "electron-builder",
    "generate-icons": "node generate-icons.js",
    "release": "node scripts/create-release.js && npx electron-builder --publish=always && echo 'To add release notes, run: gh release edit v1.0.7 --notes-file RELEASE_NOTES_CURRENT.md'",
    "release-with-notes": "node scripts/create-release.js && npx electron-builder && node scripts/create-github-release.js"
  },
  "dependencies": {
    "axios": "^1.10.0",
    "chart.js": "^4.5.0",
    "electron-log": "^5.4.2",
    "electron-updater": "^6.6.2",
    "lucide-react": "^0.344.0",
    "qr-scanner": "^1.4.2",
    "qrcode": "^1.5.4",
    "react": "^18.3.1",
    "react-chartjs-2": "^5.3.0",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.9.1",
    "@types/qrcode": "^1.5.5",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.18",
    "electron": "^28.3.3",
    "electron-builder": "^26.0.12",
    "electron-icon-builder": "^2.0.1",
    "eslint": "^9.9.1",
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
    "eslint-plugin-react-refresh": "^0.4.11",
    "globals": "^15.9.0",
    "postcss": "^8.4.35",
    "sharp": "^0.34.3",
    "tailwindcss": "^3.4.1",
    "to-ico": "^1.1.5",
    "typescript": "^5.5.3",
    "typescript-eslint": "^8.3.0",
    "vite": "^5.4.2"
  },
  "build": {
    "appId": "com.yourcompany.quicksnipe",
    "artifactName": "${productName}.${ext}",
    "productName": "Quicksnipe",
    "icon": "assets/icons/icon.ico",
    "files": [
      "dist/**/*",
      "main.cjs",
      "preload.cjs",
      "package.json",
      "assets/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/icons/icon.ico",
      "requestedExecutionLevel": "asInvoker"
    },
    "nsis": {
      "perMachine": true,
      "createDesktopShortcut": false,
      "createStartMenuShortcut": false,
      "installerIcon": "assets/icons/icon.ico",
      "uninstallerIcon": "assets/icons/icon.ico",
      "include": "build/installer.nsh"
    },
    "publish": {
      "provider": "github",
      "owner": "MikeSylvester",
      "repo": "QuickSnipe",
      "private": false,
      "releaseType": "release"
    }
  }
}